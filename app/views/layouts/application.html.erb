<!DOCTYPE html>
<html>
  <head>
    <title>JaydenStore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
     <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5">JaydenStore</h1>
        <% end  %>

  <% if user_signed_in? %>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="#"><%= link_to current_user.email, edit_user_registration_path  %></a>

        <a class="nav-link" > <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class:"navbar-item" %></a>

      </div>
    </div>
    <% else %>
    <%= link_to "Sign In", new_user_session_path, class:"navbar-item button is-warning" %>
    <%= link_to "Sign up", new_user_registration_path, class:"navbar-item button is-warning"%>

  <%end%>
  </div>
</nav>
  <div class="container">
   <%= yield %>
  </div>

  </body>
</html>
