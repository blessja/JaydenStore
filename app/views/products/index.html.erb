<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
      <%= link_to "Add to cart", carts_path(product_id: @product) %>

    </p>
  <% end %>
</div>


